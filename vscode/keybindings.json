// Place your key bindings in this file to override the defaults
[
    /*
    Clear Terminal
    Default: cmd+k
    */
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.clear",
        "when": "terminalFocus"
    },
    /*
    Open Quick Open files to side, rather than in current editor group
    (here for reminder)
